{
  "name": "copilot-mcp-bitbucket-plugin",
  "displayName": "GitHub Copilot MCP BitBucket Plugin",
  "description": "Connects GitHub Copilot to BitBucket repositories via Spring AI MCP Server",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Chat",
    "Other"
  ],
  "keywords": [
    "copilot",
    "mcp",
    "bitbucket",
    "ai",
    "code-generation"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "bitbucket-mcp",
        "name": "BitBucket MCP",
        "description": "AI assistant with access to your BitBucket repository via MCP server",
        "isSticky": true
      }
    ],
    "commands": [
      {
        "command": "copilotMCP.refreshConnection",
        "title": "Refresh MCP Connection",
        "category": "Copilot MCP"
      }
    ],
    "configuration": {
      "title": "Copilot MCP Settings",
      "properties": {
        "copilotMCP.serverUrl": {
          "type": "string",
          "default": "http://localhost:8080/mcp",
          "description": "URL of your Spring AI MCP server"
        },
        "copilotMCP.bitbucketWorkspace": {
          "type": "string",
          "default": "",
          "description": "BitBucket workspace name"
        },
        "copilotMCP.bitbucketRepo": {
          "type": "string",
          "default": "",
          "description": "BitBucket repository name"
        },
        "copilotMCP.accessToken": {
          "type": "string",
          "default": "",
          "description": "Access token for MCP server authentication (optional)"
        },
        "copilotMCP.maxContextFiles": {
          "type": "number",
          "default": 5,
          "description": "Maximum number of files to include in context"
        },
        "copilotMCP.enableAutoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh repository context"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^18.x",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "@vscode/test-electron": "^2.3.8",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "extensionDependencies": [
    "GitHub.copilot-chat"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/copilot-mcp-bitbucket-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/copilot-mcp-bitbucket-plugin/issues"
  },
  "homepage": "https://github.com/yourusername/copilot-mcp-bitbucket-plugin#readme",
  "license": "MIT",
  "publisher": "your-publisher-name"
}